    <%= form.label :category_id %>
    <%= form.select :category_id,
                    options_for_select(Category.pluck(:name, :id), grading_pallet.category),
                    { class: 'form-control' }
    %>
  </div>
  <div class="form-group">
    <%= form.label :value %>
    <%= form.text_field :value, class: "form-control", value: grading_pallet.value %>
  </div>
  <div class="form-group">
    <%= form.label :pallet_type_id %>
    <%= form.select :pallet_type_id,
                    options_for_select(PalletType.pluck(:name, :id), grading_pallet.pallet_type_id),
                    { class: 'form-control' }
    %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
